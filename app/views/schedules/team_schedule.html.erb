<%=render 'home/header'%>

<body id="page-top">

<%=render 'home/nav_bar'%>

    <header class = "main">
        <div class="header-content-main">
            <div class="header-content-inner-main">
            </div>
        </div>
    </header>

<h2 class = "subject"><%=@team.full_name%> Schedule</h2>

<table class = "table-format">
  <thead>
    <tr>

      <th>Date</th>
      <th>Home</th>
      <th>Away</th>
      <th>Home Goals</th>
      <th>Away Goals</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.sort_by {|schedule| schedule.date}.reverse.each do |schedule|%>
      <tr>
        <td><%=schedule.short_date%></td>
        <td> <a href="/leagues/<%=@league.id%>/schedules/<%=schedule.home_team_id%>"><%=schedule.home_team%></a> </td>
        <td><a href="/leagues/<%=@league.id%>/schedules/<%=schedule.away_team_id%>"><%=schedule.away_team%></td>
        <td><%=schedule.homegoals %></td>
        <td><%=schedule.awaygoals %></td>
      </tr>
    <% end %>
  </tbody>
</table>




<%=render 'home/footer'%>

</body>

</html>
