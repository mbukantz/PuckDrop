<div class = "schedule-form">
<%= form_for [@league,@schedule] do |f| %>
  <% if @league.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@league.errors.count, "error") %> prohibited this standing from being saved:</h2>
      <ul>
      <% @league.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="hidden">
    <%= f.hidden_field :league_id, value: @league.id %><br>
  </div>

  <div class="hidden">
    <%= f.hidden_field :hometeam_league_id, value: @league.id %><br>
  </div>

  <div class="hidden">
    <%= f.hidden_field :awayteam_league_id, value: @league.id %><br>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :hometeam %><br>
    <%= f.collection_select :hometeam, @schedules, :home_team_id, :home_team, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :awayteam %><br>
    <%= f.collection_select :awayteam, @schedules, :away_team_id, :away_team, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :homegoals %><br>
    <%= f.number_field :homegoals %>
  </div>
  <div class="field">
    <%= f.label :awaygoals %><br>
    <%= f.number_field :awaygoals %>
  </div>


  <div class="actions">
    <%= f.submit class: "btn btn-primary
    "%>
  </div>
<% end %>
</div>
