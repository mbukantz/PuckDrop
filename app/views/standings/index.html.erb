<%=render 'home/header'%>

<body id="page-top">

<%=render 'home/nav_bar'%>

    <header class = "main">
        <div class="header-content-main">
            <div class="header-content-inner-main">
            </div>
        </div>
    </header>

    <div class="links">
      <%= link_to 'Back to ' "#{@league.name}", league_path(@league), class: "btn"%>
      <a href="/leagues/<%=@league.id%>/statistics/years/2015/leaders" class= "btn">League Leaders</a>
      <%= link_to 'Teams', league_teams_path(@league,@team), class: "btn" %>
    </div>

<h2 class = "subject"><%=@league.name%> Standings</h2>

<table class = "table-format">
  <thead>
    <tr>

      <th>Name</th>
      <th>Games</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Win Percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.sort_by {|team| team.standing.win_percentage}.reverse.each do |team|%>
      <tr>
        <td> <a href="/leagues/<%=@league.id%>/teams/<%=team.id%>/players"><%=team.full_name %></a> </td>
        <td><%=team.standing.games %></td>
        <td><%=team.standing.wins %></td>
        <td><%=team.standing.losses %></td>
        <td><%=team.standing.win_percentage %></td>
        <td> <a href="/leagues/<%=@league.id%>/standings/<%=team.standing.id%>/edit">Edit</a> </td>

      </tr>
    <% end %>
  </tbody>
</table>

<div class = "links-end">
  <%= link_to 'Add Team' , new_league_team_path, class: "btn btn-special btn-team" %>
</div>

<div class="hidden">
  <%=render '/teams/form'%>
</div>

<%=render 'home/footer'%>

</body>

</html>
