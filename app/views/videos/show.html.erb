<%=render 'home/header'%>

<body id="page-top">

<%=render 'home/nav_bar'%>

    <header class = "main">
        <div class="header-content-main">
            <div class="header-content-inner-main">
            </div>
        </div>
    </header>

    <h1 class="subject">PuckDrop Video Portal</h1>

    <div class="active-vid">
      <%=youtube_video @video.url%>
    </div>

    <h2 id="title"><%=@video.title%></h2>
    <p id="caption"><%=@video.caption%></p>

    <div class="links"><%= link_to 'New Video', new_league_video_path , class: "btn"%></div><br><br><br><br>



    <div class="thumbnails">
      <%@videos.each do |video|%>
        <a href="/leagues/<%=@league.id%>/videos/<%=video.id%>"><%=image_tag (video.image_url),height: '175', width: '250'%></a>
        <a href="/leagues/<%=@league.id%>/videos/<%=video.id%>"><%=video.title%></a>
      <%end%>
    </div>

<%=render 'home/footer'%>

</body>

</html>
