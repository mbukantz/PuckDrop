<%= link_to 'Back to Leagues', leagues_path %>
<%= link_to 'Back to ' "#{@league.name}", league_path(@league)%>

<strong><div class="button">Teams</div></strong>
  <%@league.teams.each do |team|%>
    <div class="dropdown">
      <strong><a href="/leagues/<%=@league.id%>/teams/<%=team.id%>/statistics"><%=team.full_name%></a></strong>
    </div>
  <%end%>


<h1><%=@team.full_name%></h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "goals" %></th>
      <th><%= sortable "assists" %></th>
      <th><%= sortable "points" %></th>
      <th><%= sortable "plus_minus", "+/-" %></th>
      <th><%= sortable "atoi", "ATOI" %></th>
      <th><%= sortable "pims", "PIMs" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.sort_by {|player| player.statistic.points}.reverse.each do |player|%>
      <tr>
        <td><%=player.full_name %></td>
        <td class = "goals"><%=player.statistic.goals %></td>
        <td class = "assists"><%=player.statistic.assists %></td>
        <td><%=player.statistic.points %></td>
        <td class = "plus_minus"><%=player.statistic.plus_minus %></td>
        <td class = "atoi"><%=player.statistic.atoi %></td>
        <td class = "pims"><%=player.statistic.pims %></td>
      </tr>
    <% end %>
  </tbody>
</table>
