<%= link_to 'Back to Leagues', leagues_path %>
<%= link_to 'Back to ' "#{@league.name}", league_path(@league)%>


<h1><%=@statistic.player.full_name%></h1>
<h2>Edit Stats</h2>


<%= form_for [@league,@team,@statistic] do |f| %>
  <% if @league.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@league.errors.count, "error") %> prohibited this statistic from being saved:</h2>
      <ul>
      <% @league.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :games %><br>
    <%= f.number_field :games %>
  </div>
  <div class="field">
    <%= f.label :goals %><br>
    <%= f.number_field :goals %>
  </div>
  <div class="field">
    <%= f.label :assists %><br>
    <%= f.number_field :assists %>
  </div>
  <div class="field">
    <%= f.label :plus_minus %><br>
    <%= f.number_field :plus_minus %>
  </div>
  <div class="field">
    <%= f.label :atoi %><br>
    <%= f.number_field :atoi %>
  </div>
  <div class="field">
    <%= f.label :pims %><br>
    <%= f.number_field :pims %>
  </div>

  <br><div class="actions">
    <%= f.submit %>
  </div>
<% end %>


