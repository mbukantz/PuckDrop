<%=render 'home/header'%>

<body id="page-top">

<%=render 'home/nav_bar'%>

    <header class = "main">
        <div class="header-content-main">
            <div class="header-content-inner-main">
            </div>
        </div>
    </header>

  <div class="links">
    <%= link_to 'Back to ' "#{@league.name}", league_path(@league), class: "btn"%>
  </div>

<h2 class = "subject"><%=@team.full_name%></a></h2>

<h3 class = "subject"><%=@year.id%></h3>

<strong><div class="button">Years</div></strong>
  <%@years.each do |year|%>
    <div class="dropdown">
      <strong><a href="/leagues/<%=@league.id%>/teams/<%=@team.id%>/statistics/years/<%=year.id%>"><%=year.id%></a></strong>
    </div>
  <%end%>


<table class = "table-format">
  <thead>
    <tr>
      <th>Name</th>
      <th>Games</th>
      <th>Goals</th>
      <th>Assists</th>
      <th>Points</th>
      <th>+/-</th>
      <th>ATOI</th>
      <th>PIMs</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statistics.sort_by{|stat| stat.points}.reverse.each do |statistic|%>
      <tr>
        <td> <a href="/leagues/<%=@league.id%>/teams/<%=@team.id%>/players/<%=statistic.player.id%>"><%=statistic.player.full_name %></a> </td>
        <td><%=statistic.games %></td>
        <td><%=statistic.goals %></td>
        <td><%=statistic.assists %></td>
        <td><%=statistic.points %></td>
        <td><%=statistic.plus_minus %></td>
        <td><%=statistic.atoi %></td>
        <td><%=statistic.pims %></td>
        <td> <a href="/leagues/<%=@league.id%>/teams/<%=@team.id%>/statistics/<%=statistic.id%>/edit">Edit</a> </td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<div class = "links-end">
  <%= link_to 'Add Player' , new_league_team_player_path, class: "btn btn-special btn-player" %>

  <%= link_to 'Add Statistic' , '#', class: "btn btn-special btn-stat" %>
</div>

<div class="hidden">
  <%=render '/players/form'%>
</div>


<div class="hidden">
  <%=render '/statistics/form'%>
</div>


<%=render 'home/footer'%>

</body>

</html>
