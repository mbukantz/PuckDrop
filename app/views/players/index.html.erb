<h1><%=@team.full_name%></h1>

<p>
  <strong>Coach:</strong>
  <%=@team.coach %>
</p>

<p>
  <strong>Arena:</strong>
  <%= @team.arena %>
</p>

  <table>
    <thead>
      <tr>
        <th>Player</th>
        <th>Position</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Shoots</th>
        <th>Birthday</th>
        <th>Age</th>
        <th>Hometown</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <%@team.players.each do |player| %>
        <tr>
          <td><a href="/leagues/<%=player.team.league.id%>/teams/<%=player.team_id%>/players/<%=player.id%>"><%=player.full_name%></a> </td>
          <td><%= player.position %></td>
          <td><%= player.hgt %></td>
          <td><%= player.weight %></td>
          <td><%= player.shoots %></td>
          <td><%= player.birthdate %></td>
          <td><%= player.age %></td>
          <td><%= player.hometown %></td>

          <td><%= link_to 'Edit', edit_league_team_player_path(@league,@team,player) %></td>
          <td><%= link_to 'Delete',  { action: :destroy, id: player.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>


  <%= link_to 'Add Player', new_league_team_player_path %>

  <%= link_to 'To Teams', league_teams_path%>

  <a href="/leagues/<%=@league.id%>/teams/<%=@league.teams.first.id%>/statistics/years/2015">Player Stats</a>
