<%=render 'home/header'%>

<body id="page-top">

<%=render 'home/nav_bar'%>

    <header class = "main">
        <div class="header-content-main">
            <div class="header-content-inner-main">
            </div>
        </div>
    </header>

<h2 class = "subject"><%=@team.full_name%></h2>

<div class="main-body">
  <p>
    <strong>Coach:</strong>
    <%=@team.coach %>
  </p>

  <p>
    <strong>Arena:</strong>
    <%= @team.arena %>
  </p>

    <table class="table-format">
      <thead>
        <tr>
          <th>Player</th>
          <th>Position</th>
          <th>Height</th>
          <th>Weight</th>
          <th>Shoots</th>
          <th>Birthday</th>
          <th>Age</th>
          <th>Hometown</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <%@team.players.each do |player| %>
          <tr>
            <td><a href="/leagues/<%=player.team.league.id%>/teams/<%=player.team.id%>/players/<%=player.id%>"><%=player.full_name%></a> </td>
            <td><%= player.position %></td>
            <td><%= player.hgt %></td>
            <td><%= player.weight %></td>
            <td><%= player.shoots %></td>
            <td><%= player.birthdate %></td>
            <td><%= player.age %></td>
            <td><%= player.hometown %></td>

            <td><%= link_to 'Edit', edit_league_team_player_path(@league,@team,player) %></td>
            <td><%= link_to 'Delete',  { action: :destroy, id: player.id }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table><br>

    <div class = "links">
      <%= link_to 'Add Player', new_league_team_player_path , class: "btn"%>
    </div>
  </div>

<%=render 'home/footer'%>

</body>

</html>
